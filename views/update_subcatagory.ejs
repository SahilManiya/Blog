<%- include('header')%>

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row"> 
                <div class="col-md-12">
                    <div class="card"> 
                        <div class="card-body card-block">
                            <form action="/admin/subcatagory/editSubcatagoryData" method="post" class="form-horizontal">
                                <input type="hidden" name="EditSubcatagoryId" value="<%=SubcatagoryData.id%>">
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Enter Title</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="text-input" name="title" placeholder="Enter Title" value="<%=SubcatagoryData.title%>" class="form-control">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Select Category</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                       
                                        <select name="catagory_list" id="select" class="form-control">
                                            <option value="">Select Catagory</option>
                                            <%for(var v of CatagoryData){%>
                                                <option value="<%=v.id%>"><%=v.catagory%></option>
                                            <%}%>
                                        </select> 
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Select Subcategory Image</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="file" id="text-input" name="catagory" placeholder="Enter Category" value="<%=SubcatagoryData.subcatagory_image%>" class="form-control">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Enter Description</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="text-input" name="description" placeholder="Enter Description" value="<%=SubcatagoryData.description%>" class="form-control">
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fa fa-dot-circle-o"></i> Edit
                                    </button>
                                    <button type="reset" class="btn btn-danger btn-sm">
                                        <i class="fa fa-ban"></i> Reset
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <%-include('footer')%>